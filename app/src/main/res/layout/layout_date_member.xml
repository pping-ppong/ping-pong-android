<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/calender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/back_white_round_top_16dp">
        <TextView
            android:layout_width="match_parent"
            style="@style/textBlackBold16"
            tools:text="그룹 관리"
            android:textAlignment="center"
            android:lineSpacingExtra="3dp"
            android:paddingVertical="4dp"/>

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusedMonthDateColor="@color/white"
            android:selectedWeekBackgroundColor="@color/black"
            android:unfocusedMonthDateColor="@color/black" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>